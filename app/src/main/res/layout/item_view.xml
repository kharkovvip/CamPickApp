<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:maxHeight="63dp"
        android:maxWidth="90dp"
        android:src="@drawable/popup_54626e" />

    <TextView
        android:id="@+id/item_txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/item_txtSubject"
        android:layout_alignParentStart="true"
        android:text="@string/item_address"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/blue_white" />

    <TextView
        android:id="@+id/item_tempAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_icon"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/item_txtAddress"
        android:text="@string/temp_address"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/item_tempSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/item_tempAddress"
        android:layout_alignTop="@+id/item_txtSubject"
        android:text="@string/temp_subject"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/item_txtSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item_txtAddress"
        android:layout_marginTop="5dp"
        android:text="@string/item_subject"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/blue_white" />


</RelativeLayout>
