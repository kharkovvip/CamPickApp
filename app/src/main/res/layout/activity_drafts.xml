<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bckg"
    android:orientation="vertical"
    android:screenOrientation="locked">


    <ListView
        android:id="@+id/mailListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/removeBtnFrame"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:id="@+id/removeBtnFrame"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="35dp"

        android:layout_width="match_parent">

        <Button
            android:id="@+id/removeBtn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/remove_actions" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="@string/removeBtnTxt"
            android:id="@+id/removeBtnTextView"
            android:layout_gravity="center" />

    </FrameLayout>


</RelativeLayout>